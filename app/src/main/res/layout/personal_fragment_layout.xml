<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp">
            <com.allen.library.SuperTextView
                android:id="@+id/per_srcname"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                stv:sLeftIconHeight="50dp"
                stv:sLeftIconRes="@drawable/name_icon"
                stv:sLeftIconShowCircle="true"
                stv:sLeftIconWidth="50dp"
                stv:sLeftTextString="未登录"
                stv:sLeftViewGravity="left_center" />
            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                stv:sCenterBottomTextColor="#979b9e"
                stv:sCenterBottomTextString="帖子"
                stv:sCenterSpaceHeight="10dp"
                stv:sCenterTopTextString="0"
                stv:sLeftBottomTextColor="#979b9e"
                stv:sLeftBottomTextString="点赞"
                stv:sLeftTopTextString="0"
                stv:sLeftViewMarginLeft="30dp"
                stv:sRightBottomTextColor="#979b9e"
                stv:sRightBottomTextString="粉丝"
                stv:sRightTopTextString="0"
                stv:sRightViewMarginRight="30dp" />
            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                stv:sLeftTopTextString="艾声输入法"
                stv:sLeftViewGravity="left_center"
                stv:sRightViewType="switchBtn" />
            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="通知设置"
                stv:sRightIconRes="@drawable/arrow_right_red" />
            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                stv:sLeftTextString="账号与安全"
                stv:sRightTextString="已保护"
                stv:sRightIconRes="@drawable/arrow_right_red"
                android:layout_height="50dp" />

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sDividerLineType="bottom"
                stv:sLeftTextString="设置中心"
                stv:sRightIconRes="@drawable/arrow_right_red"
                />

            <com.allen.library.SuperTextView
                android:id="@+id/about_aisheng"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                stv:sDividerLineType="both"
                stv:sLeftTextString="关于艾声"
                stv:sRightIconRes="@drawable/arrow_right_red" />
        </LinearLayout>


    </ScrollView>
</LinearLayout>
